    	int[] nums4 = { 0, 0, 1, 0, 1 };
    	System.out.println(minSteps(nums1));
    	System.out.println(minSteps(nums2));
    	System.out.println(minSteps(nums3));
    	System.out.println(minSteps(nums4));
        
        
   }
    
    
    
    private static int minSteps(int[] nums) {
    	int res = 0;
    	for (int i = 0; i < nums.length; i++) {
    		int cur = nums[i];
    		if (cur == 0) {
    			continue;
    		}
    		if (cur == 1)
    			res++;
    	}
    	return 2+(res-1);
    }

}
